{% extends 'base.html.twig' %}
{% block title %}GitHub Resume{% endblock %}

{% block body %}
    <div id="wrapper" class="border">
        <div id="container">
            <div class="text-center">
                <a class="navbar-brand" href="/">
                    <img class="github-logo" src="{{ asset("images") ~  github_logo }}" alt="{{ github_logo }}" />
                    Github2Resume
                </a>
			</div>
			<br/>
            <div id="githubCv">
                <h2>Generate CV from your Github account!</h2>
            </div>
            <div id="content">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}